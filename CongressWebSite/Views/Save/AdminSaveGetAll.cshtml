@using Entities.Concrete
@model List<Save>
@{
    ViewData["Title"] = "AdminSaveGetAll";
    Layout = "~/Views/Shared/AdminPageLayout.cshtml";
}

<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Kayıt</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#" class="dropdown-item">Config option 1</a>
                    </li>
                    <li>
                        <a href="#" class="dropdown-item">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <table class="table table-hover text-center dataTables-example">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Video Konferans Üye Fiyatı</th>
                        <th>Video Konferans Üye Olmayan Fiyatı</th>
                        <th>Sözlü Sunum Üye Fiyatı</th>
                        <th>Sözlü Sunum Üye Olmayan Fiyatı</th>
                        <th>Video Konferans Açıklama</th>
                        <th>Kayıta Ek Olarak Hizmetler</th>
                        <th>Açıklama</th>
                        <th><a href="/Save/AdminSaveAdd" role="button" class="btn btn-outline-primary">Ekle</a></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><b>@item.Id</b></td>
                            <td>@item.VideoConferenceMemberPrice</td>
                            <td>@item.VideoConferenceNonMemberPrice</td>
                            <td>@item.OralPresentationMemberPrice</td>
                            <td>@item.OralPresentationNonMemberPrice</td>
                            <td>@item.VideoConferenceDescription.Substring(0,5) ...</td>
                            <td>@item.ParticipationPriceServiceAdditionDescription.Substring(0,5) ...</td>
                            <td>@item.Description.Substring(0,5) ...</td>
                            <td><a href="/Save/AdminSaveDelete/@item.Id" role="button" class="btn btn-outline-danger">Sil</a> <a href="/Save/AdminSaveUpdate/@item.Id" role="button" class="btn btn-outline-warning">Güncelle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



