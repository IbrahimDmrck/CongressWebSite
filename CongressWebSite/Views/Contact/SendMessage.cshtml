@model Entities.Concrete.Contact
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/Contact.cshtml";
}

<form id="contact" asp-action="SendMessage" asp-controller="Contact" method="post">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <fieldset>
                <input asp-for="@Model.NameSurname" type="text" id="name" placeholder="Adınız Soyadınız" required>
                @Html.ValidationMessageFor(x => x.NameSurname, "", new { @style = "color:red" })
            </fieldset>
        </div>
        <div class="col-md-6 col-sm-12">
            <fieldset>
                <input asp-for="@Model.Email" type="text" id="email" placeholder="E-posta Adresiniz" required>
                @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color:red" })
            </fieldset>
        </div>
        <div class="col-lg-12">
            <fieldset>
                <textarea asp-for="@Model.Message" rows="6" id="message" placeholder="Lütfen İletmek İstediğiniz Mesajınızı Bir Kaç Cümle İle Açıklayınız" required></textarea>
                @Html.ValidationMessageFor(x => x.Message, "", new { @style = "color:red" })
            </fieldset>
        </div>
        <div class="col-lg-12">
            <fieldset>
                <button type="submit" id="form-submit" class="main-button">Mesaj Gönder</button>
            </fieldset>
        </div>
    </div>
</form>

