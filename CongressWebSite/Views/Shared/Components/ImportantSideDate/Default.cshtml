@model IEnumerable<Entities.Concrete.Announcement>
<div class="col-lg-12">
    <div class="sidebar-item categories">
        <div class="sidebar-heading">
            <h2>Duyurular</h2>
        </div>
        <div class="content">
            <ul>
                @foreach (var item in Model.OrderByDescending(x=>x.Id).Take(5))
                {
                    
                        <li><a href="#">- @item.AnnounceTitle</a><br /> @item.AnnounceDate.ToShortDateString()</li>
                   
                    
                    
                }

            </ul>
        </div>
    </div>
</div>