@using Entities.Concrete
@model List<Congress>
@{
    ViewData["Title"] = "CongressesGetAll";
    Layout = "~/Views/Shared/HomePageLayout.cshtml";
}

<div class="col-lg-8">
    <div class="all-blog-posts">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-6">
                    <div class="blog-post">
                        <div class="blog-thumb">
                            <img src="~/images/@item.ImagePath" alt="">
                        </div>
                        <div class="down-content">
                            <span>@item.KongreAdi</span>
                            <a href="/HomePage/CongressDetails/@item.KongreId"><h4>@item.KongreKonusu</h4></a>
                            <ul class="post-info">
                                <li><a href="#">@item.KongreAdresi</a></li>
                                <li><a href="#">@item.KongreTarihi.ToShortDateString()</a></li>
                                <li><a href="#">@item.KongreBitisTarihi.ToShortDateString()</a></li>
                            </ul>
                          
                            <p></p>
                            <div class="post-options">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <ul class="post-tags">
                                            <li><i class="fa fa-tags"></i></li>
                                            <li><a href="#">@item.KongreKonusu</a></li>
                                           
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
