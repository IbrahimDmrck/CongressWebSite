@model Entities.Concrete.AdminContactInfo
@{
    ViewData["Title"] = "AdminContactInfoAdd";
    Layout = "~/Views/Shared/AdminPageLayout.cshtml";
}


<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>İletişim Bilgileri Ekle</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#" class="dropdown-item">Config option 1</a>
                    </li>
                    <li>
                        <a href="#" class="dropdown-item">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form method="post" asp-action="AdminContactInfoAdd" asp-controller="AdminContactInfo">
                <div class="form-group">

                    <div class="row">
                        <div class="col-4">
                            <label>Telefon Numarası Bilgisi :</label>
                            <input type="text" class="form-control " asp-for="@Model.PhoneNumber" required />
                            @Html.ValidationMessageFor(x => x.PhoneNumber, "", new { @style = "color:red" })
                        </div>
                        <div class="col-4">
                            <label>E-posta Bilgisi :</label>
                            <input type="text" asp-for="@Model.Email" class="form-control " required />
                            @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color:red" })
                        </div>
                        <div class="col-4">
                            <label>Adres Bilgisi :</label>
                            <input type="text" asp-for="@Model.Address" class="form-control " required />
                            @Html.ValidationMessageFor(x => x.Address, "", new { @style = "color:red" })
                        </div>   

                    </div>

             

                    <div class="text-center mt-3"> <button type="submit" class="btn btn-xl btn-outline-success w-25 h-25">İletişim Bilgileri Ekle</button></div>
                </div>


            </form>
        </div>
    </div>
</div>

