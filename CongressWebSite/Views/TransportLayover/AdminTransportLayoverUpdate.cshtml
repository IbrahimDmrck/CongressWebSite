@model CongressWebSite.Models.TransportLayoverModel
@{
    ViewData["Title"] = "AdminTransportLayoverUpdate";
    Layout = "~/Views/Shared/AdminPageLayout.cshtml";
}


<div class="col-lg-12">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Ulaşım & Konaklama Bilgisi Güncelle </h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li>
                        <a href="#" class="dropdown-item">Config option 1</a>
                    </li>
                    <li>
                        <a href="#" class="dropdown-item">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <form method="post" asp-action="AdminTransportLayoverUpdate" asp-controller="TransportLayover" enctype="multipart/form-data">
                <div class="form-group">
                    <input hidden asp-for="@Model.TransportId" />
                    <div class="row m-3">
                        <div class="col-12">
                            <label>Fotoğrafı Seçin :</label>
                            <input class="form-control bg-dark" type="file" asp-for="@Model.ImagePath" id="formFileMultiple" multiple required>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-4">
                            <label>Kapasite :</label>
                            <input type="text" asp-for="@Model.Capacity" class="form-control" placeholder="Kongre Adı" required />
                        </div>
                        <div class="col-4">
                            <label>En Az İstek :</label>
                            <input type="text" asp-for="@Model.MinDemand" class="form-control" placeholder="Kongre Başkanı" required />
                        </div>
                        <div class="col-4">
                            <label>Fiyat :</label>
                            <input id="baslangicTarihi" type="text" asp-for="@Model.Price" class="form-control" required />
                        </div>

                    </div>



                    <div class="col-lg-12 mb-4">
                        <label>Açıklaması :</label>
                        <textarea asp-for="@Model.Description" cols="200" class="form-control summernote"></textarea>
                    </div>

                    <div class="text-center"> <button type="submit" class="btn btn-xl btn-outline-success">Ulaşım & Konaklama Bilgisi Güncelle</button></div>
                </div>


            </form>
        </div>


    </div>
</div>

